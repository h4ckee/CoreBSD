.include <src.opts.mk>

CONFGROUPS=		ETC ROOT
ETC=			profile
ROOT=			dot.shrc dot.profile
ROOTDIR=		/root
ROOTDIR_MODE=		0750
ROOTNAME_dot.shrc=	.shrc
ROOTNAME_dot.profile=	.profile
PACKAGE=		runtime
PROG=			mksh
MKSHDIR=		${SRCTOP}/contrib/mksh
.PATH: ${MKSHDIR}

SRCS=		edit.c eval.c exec.c expr.c funcs.c histrap.c jobs.c lalloc.c \
 		lex.c main.c misc.c shf.c syn.c tree.c ulimit.c var.c

GENFILES=	${MKSHDIR}/sh_flags.gen ${MKSHDIR}/rlimits.gen ${MKSHDIR}/ulimits.gen

CLEANFILES+=	${GENFILES} ${MAN}

${MKSHDIR}/sh_flags.gen:
	cd ${MKSHDIR} && sh ./Build.sh -G sh_flags.opt

${MKSHDIR}/rlimits.gen:
	cd ${MKSHDIR} && sh ./Build.sh -G rlimits.opt

${MKSHDIR}/ulimits.gen:
	cd ${MKSHDIR} && sh ./Build.sh -G ulimits.opt

${SRCS:S/.c/.o/g}: ${GENFILES}

CFLAGS+=	-std=c99 -fno-asynchronous-unwind-tables -fno-strict-aliasing -fstack-protector-all -fwrapv -I${MKSHDIR}
CFLAGS+= \
	-DHAVE_ATTRIBUTE_BOUNDED=1	-DHAVE_ATTRIBUTE_FORMAT=1	-DHAVE_ATTRIBUTE_NORETURN=1	\
	-DHAVE_ATTRIBUTE_PURE=1		-DHAVE_ATTRIBUTE_UNUSED=1	-DHAVE_ATTRIBUTE_USED=1		\
	-DHAVE_BOTH_TIME_H=1		-DHAVE_BSTRING_H=0		-DHAVE_CAN_INT8TYPE=1		\
	-DHAVE_CAN_INTTYPES=1		-DHAVE_CAN_UCBINT8=1		-DHAVE_CAN_UCBINTS=1		\
	-DHAVE_FLOCK=1			-DHAVE_FLOCK_DECL=1		-DHAVE_FTRUNCATE=1		\
	-DHAVE_GETRUSAGE=1		-DHAVE_GETSID=1			-DHAVE_GETTIMEOFDAY=1		\
	-DHAVE_GRP_H=1			-DHAVE_IO_H=0			-DHAVE_KILLPG=1			\
	-DHAVE_LANGINFO_CODESET=1	-DHAVE_LIBGEN_H=1		-DHAVE_LIBUTIL_H=1		\
	-DHAVE_LOCK_FCNTL=1		-DHAVE_MEMMOVE=1		-DHAVE_MKNOD=0			\
	-DHAVE_MMAP=1			-DHAVE_NICE=1			-DHAVE_PATHS_H=1		\
	-DHAVE_PERSISTENT_HISTORY=1	-DHAVE_REVOKE=1			-DHAVE_REVOKE_DECL=1		\
	-DHAVE_RLIMIT=1			-DHAVE_RLIM_T=1			-DHAVE_SELECT=1			\
	-DHAVE_SETGROUPS=1		-DHAVE_SETLOCALE_CTYPE=1	-DHAVE_SETRESUGID=1		\
	-DHAVE_SIG_T=1			-DHAVE_STDINT_H=1		-DHAVE_STRERROR=0		\
	-DHAVE_STRINGS_H=1		-DHAVE_STRING_POOLING=1		-DHAVE_STRLCPY=1		\
	-DHAVE_STRSIGNAL=0		-DHAVE_ST_MTIM=1		-DHAVE_ST_MTIMENSEC=0		\
	-DHAVE_SYS_BSDTYPES_H=0		-DHAVE_SYS_ERRLIST=1		-DHAVE_SYS_ERRLIST_DECL=1	\
	-DHAVE_SYS_FILE_H=1		-DHAVE_SYS_MKDEV_H=0		-DHAVE_SYS_MMAN_H=1		\
	-DHAVE_SYS_PARAM_H=1		-DHAVE_SYS_RESOURCE_H=1		-DHAVE_SYS_SELECT_H=1		\
	-DHAVE_SYS_SIGLIST=1		-DHAVE_SYS_SIGLIST_DECL=1	-DHAVE_SYS_SIGNAME=1		\
	-DHAVE_SYS_SYSMACROS_H=0	-DHAVE_SYS_TIME_H=1		-DHAVE_TERMIOS_H=1		\
	-DHAVE_TIME_H=1			-DHAVE_ULIMIT_H=1		-DHAVE_VALUES_H=0		\
	-DMKSH_BUILDSH			-DMKSH_BUILD_R=593

WARNS?=	0

MAN=	sh.1

sh.1: mksh.1
	cat ${.ALLSRC} | mandoc -T man > ${.TARGET}

LINKS=	${BINDIR}/mksh ${BINDIR}/sh
MLINKS=	sh.1 mksh.1 sh.1 ulimit.1

beforeinstallconfig:
	rm -f ${DESTDIR}/.shrc ${DESTDIR}/.profile

.include <bsd.prog.mk>
